{
  "id": "stratus",
  "providers": ["stratus"],
  "tools": ["stratus_embeddings", "stratus_rollout"],
  "configSchema": {
    "type": "object",
    "additionalProperties": false,
    "properties": {
      "enabled": {
        "type": "boolean",
        "default": true,
        "description": "Enable Stratus plugin"
      },
      "apiKey": {
        "type": "string",
        "description": "Stratus API key (or use STRATUS_API_KEY env var)"
      },
      "baseUrl": {
        "type": "string",
        "default": "https://dev.api.stratus.run",
        "description": "Stratus API base URL"
      },
      "provider": {
        "type": "object",
        "properties": {
          "enabled": {
            "type": "boolean",
            "default": true
          },
          "defaultModel": {
            "type": "string",
            "default": "stratus-x1ac-base-claude-sonnet-4-5"
          }
        }
      },
      "tools": {
        "type": "object",
        "properties": {
          "embeddings": {
            "type": "object",
            "properties": {
              "enabled": {
                "type": "boolean",
                "default": true
              }
            }
          },
          "rollout": {
            "type": "object",
            "properties": {
              "enabled": {
                "type": "boolean",
                "default": true
              }
            }
          }
        }
      }
    }
  }
}
